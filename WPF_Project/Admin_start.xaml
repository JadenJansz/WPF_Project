                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btn_addroom" Content="Add Room" HorizontalAlignment="Left" Margin="59,204,0,0" VerticalAlignment="Top" Foreground="White" Width="280" Height="59" FontSize="20" Click="btn_addroom_Click">
