            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="250" Height="55" CornerRadius="15" Background="{TemplateBinding Background}" Margin="-8,-5,21.2,-11">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btn_data" Content="View Database" HorizontalAlignment="Left" Margin="48,320,0,0" Foreground="White" VerticalAlignment="Top" Width="620" Height="48" FontSize="24" Click="btn_data_Click">
