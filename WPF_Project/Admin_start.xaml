                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="250" Height="55" CornerRadius="15" Background="{TemplateBinding Background}" Margin="-8,-5,21.2,-11">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btn_adduser" Content="Add User" HorizontalAlignment="Left" Margin="59,104,0,0" VerticalAlignment="Top" Foreground="White" Width="280" Height="43" FontSize="20" Click="btn_adduser_Click">
